<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        style="@style/BackGroundImageView"
        app:srcCompat="@drawable/genesis"/>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin"
            android:textStyle="bold" />

        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupancy"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/occupancy"
                style="@style/PoolStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="328"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                />

            <TextView
                android:id="@+id/textView10"
                style="@style/PoolStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/435"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hashrate Live"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hashrate"
                style="@style/PoolStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.40" />

            <TextView
                style="@style/PoolStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH/s" />
        </LinearLayout>


        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min duration"
            android:textStyle="bold" />

        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1241 days" />

        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC/24h/Token"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btc_earnings"
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00002878 BTC" />

        <TextView
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your stake"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_stake"
            style="@style/PoolStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>